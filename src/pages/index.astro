---
import PageLayout from '../layouts/PageLayout.astro';
import NoteGrid from '../components/NoteGrid.astro';
import HeroSection from '../components/HeroSection.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

// Get the latest notes
const allNotes = await getCollection('notes');
const latestNotes = allNotes
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6); // Show latest 6 notes
---

<PageLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<HeroSection 
		title={SITE_TITLE}
		subtitle="Observations on the human experience in our digital age."
	/>
	
	<!-- Main Content -->
	<main class="main-content">
		<section class="notes-section">
			<header class="section-header">
				<h2 class="section-title">Latest Notes</h2>
				<p class="section-description">
					Recent thoughts and observations on modern humanity
				</p>
			</header>
			
			<NoteGrid 
				notes={latestNotes}
				title=""
				description=""
				showTitle={false}
				showDescription={false}
				columns={3}
				variant="default"
				className="notes-grid"
			/>
		</section>
	</main>
</PageLayout>

<style>

	/* Main Content */
	.main-content {
		max-width: var(--container-content);
		margin: 0 auto;
		padding: var(--space-24) var(--space-6);
		background: var(--color-background);
	}

	/* Notes Section */
	.notes-section {
		width: 100%;
	}

	.section-header {
		text-align: center;
		margin-bottom: var(--space-16);
	}

	.section-title {
		font-family: var(--font-serif);
		font-size: var(--text-4xl);
		font-weight: 300;
		line-height: var(--leading-tight);
		color: var(--color-primary);
		margin: 0 0 var(--space-6) 0;
		letter-spacing: -0.02em;
	}

	.section-description {
		font-size: var(--text-lg);
		line-height: var(--leading-relaxed);
		color: var(--color-secondary);
		margin: 0;
		max-width: 500px;
		margin-left: auto;
		margin-right: auto;
		font-weight: 400;
		opacity: 0.8;
	}

	.notes-grid {
		margin-top: var(--space-8);
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.main-content {
			padding: var(--space-20) var(--space-6);
		}

		.section-header {
			margin-bottom: var(--space-12);
		}

		.section-title {
			font-size: var(--text-3xl);
		}
	}

	@media (max-width: 768px) {
		.main-content {
			padding: var(--space-16) var(--space-4);
		}

		.section-title {
			font-size: var(--text-2xl);
		}

		.section-description {
			font-size: var(--text-base);
		}

		.section-header {
			margin-bottom: var(--space-10);
		}
	}

	@media (max-width: 480px) {
		.main-content {
			padding: var(--space-12) var(--space-3);
		}

		.section-title {
			font-size: var(--text-xl);
		}

		.section-description {
			font-size: var(--text-sm);
		}
	}

	/* Dark mode support */
	[data-theme="dark"] .section-title {
		color: var(--color-primary);
	}

	[data-theme="dark"] .section-description {
		color: var(--color-secondary);
	}
</style>