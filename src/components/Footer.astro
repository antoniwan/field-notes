---
const today = new Date();
const packageJson = await import('../../package.json');
const version = packageJson.version;
---

<footer class="bg-subtle border-t border-border mt-20">
	<div class="container container-content mx-auto py-12 px-6 text-center">
		<div class="mb-8">
			<p class="text-muted text-sm mb-4">
				&copy; {today.getFullYear()} Field Notes on Modern Humanity
			</p>
			<div class="mb-0">
				<p class="text-muted text-xs m-0 leading-relaxed">
					<strong>Content:</strong> <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener" class="text-accent no-underline hover:underline">CC BY-NC-SA 4.0</a> • 
					<strong>Code:</strong> <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener" class="text-accent no-underline hover:underline">MIT</a> • 
					<strong>Version:</strong> {version}
				</p>
			</div>
		</div>
	</div>
</footer>
<style>
	/* Responsive adjustments for footer */
	@media (max-width: 768px) {
		.footer-content {
			padding: var(--space-8) var(--space-4);
		}

		.footer-info {
			margin-bottom: var(--space-6);
		}

		.license-text {
			font-size: 0.7rem;
		}
	}
</style>
