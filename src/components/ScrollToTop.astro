---
// ScrollToTop component for smooth scrolling to top functionality
---

<button 
  class="scroll-to-top" 
  aria-label="Scroll to top"
  title="Scroll to top"
  id="scroll-to-top-btn"
>
  <svg class="scroll-to-top__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 19V5M5 12l7-7 7 7"/>
  </svg>
</button>

<script>
  // Scroll to top functionality
  const scrollToTopBtn = document.getElementById('scroll-to-top-btn') as HTMLButtonElement;
  
  // Show/hide button based on scroll position
  const toggleScrollButton = () => {
    if (window.scrollY > 300) {
      scrollToTopBtn?.classList.add('scroll-to-top--visible');
    } else {
      scrollToTopBtn?.classList.remove('scroll-to-top--visible');
    }
  };
  
  // Smooth scroll to top
  const scrollToTop = () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  };
  
  // Event listeners
  window.addEventListener('scroll', toggleScrollButton);
  scrollToTopBtn?.addEventListener('click', scrollToTop);
  
  // Initial check
  toggleScrollButton();
</script>

<style>
  .scroll-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 3rem;
    height: 3rem;
    background: var(--color-accent);
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all var(--transition-smooth);
    z-index: var(--z-fixed);
    box-shadow: var(--shadow-elevated);
  }

  .scroll-to-top:hover {
    background: var(--color-accent-hover);
    transform: translateY(0) scale(1.1);
    box-shadow: 0 8px 25px -5px rgb(37 99 235 / 0.3);
  }

  .scroll-to-top:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .scroll-to-top--visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .scroll-to-top__icon {
    transition: transform var(--transition-smooth);
  }

  .scroll-to-top:hover .scroll-to-top__icon {
    transform: translateY(-2px);
  }

  /* Dark mode styles */
  [data-theme="dark"] .scroll-to-top {
    background: var(--color-accent);
    color: white;
    box-shadow: 0 10px 25px -5px rgb(96 165 250 / 0.3);
  }

  [data-theme="dark"] .scroll-to-top:hover {
    background: var(--color-accent-hover);
    box-shadow: 0 8px 25px -5px rgb(96 165 250 / 0.4);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .scroll-to-top {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 2.5rem;
      height: 2.5rem;
    }

    .scroll-to-top__icon {
      width: 16px;
      height: 16px;
    }
  }

  @media (max-width: 480px) {
    .scroll-to-top {
      bottom: 1rem;
      right: 1rem;
      width: 2.25rem;
      height: 2.25rem;
    }

    .scroll-to-top__icon {
      width: 14px;
      height: 14px;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .scroll-to-top {
      border: 2px solid var(--color-primary);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .scroll-to-top {
      transition: opacity var(--transition-fast), visibility var(--transition-fast);
    }

    .scroll-to-top:hover {
      transform: none;
    }

    .scroll-to-top:hover .scroll-to-top__icon {
      transform: none;
    }
  }
</style>
