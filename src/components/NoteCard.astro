---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	slug: string;
	heroImage?: ImageMetadata;
	updatedDate?: Date;
	showImage?: boolean;
	variant?: 'default' | 'compact' | 'featured';
	className?: string;
}

const {
	title,
	description,
	pubDate,
	slug,
	heroImage,
	updatedDate,
	showImage = true,
	variant = 'default',
	className = ''
} = Astro.props;

const cardClasses = {
	default: 'note-card',
	compact: 'note-card note-card--compact',
	featured: 'note-card note-card--featured'
};

const imageSizes = {
	default: { width: 120, height: 80 },
	compact: { width: 120, height: 80 },
	featured: { width: 160, height: 100 }
};

const imageSize = imageSizes[variant];
---

<article class={`${cardClasses[variant]} ${className}`}>
	<a href={`/notes/${slug}/`} class="note-card__link">
		{showImage && heroImage && (
			<div class="note-card__image">
				<Image
					src={heroImage}
					alt={title}
					width={imageSize.width}
					height={imageSize.height}
					class="note-card__img"
					loading="lazy"
				/>
				<div class="note-card__overlay"></div>
			</div>
		)}
		
		<div class="note-card__content">
			<header class="note-card__header">
				<h3 class="note-card__title">{title}</h3>
				{description && (
					<p class="note-card__description">{description}</p>
				)}
			</header>
			
			<footer class="note-card__footer">
				<time 
					class="note-card__date" 
					datetime={pubDate.toISOString()}
					title={`Published on ${pubDate.toLocaleDateString()}`}
				>
					<FormattedDate date={pubDate} />
				</time>
				{updatedDate && updatedDate.getTime() !== pubDate.getTime() && (
					<time 
						class="note-card__updated" 
						datetime={updatedDate.toISOString()}
						title={`Updated on ${updatedDate.toLocaleDateString()}`}
					>
						Updated <FormattedDate date={updatedDate} />
					</time>
				)}
			</footer>
		</div>
	</a>
</article>

<style>
	.note-card {
		position: relative;
		background: var(--color-background);
		border-radius: 0;
		overflow: hidden;
		transition: all var(--transition-smooth);
		height: 100%;
		display: flex;
		flex-direction: row;
		align-items: flex-start;
		padding: var(--space-6);
		gap: var(--space-6);
	}

	.note-card:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.note-card__link {
		display: flex;
		flex-direction: row;
		align-items: flex-start;
		height: 100%;
		width: 100%;
		text-decoration: none;
		color: inherit;
		gap: var(--space-6);
	}

	.note-card__image {
		position: relative;
		overflow: hidden;
		background: var(--color-background-subtle);
		width: 120px;
		height: 80px;
		flex-shrink: 0;
	}

	.note-card__img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform var(--transition-smooth);
		border-radius: 0;
		margin: 0;
	}

	.note-card:hover .note-card__img {
		transform: scale(1.05);
	}

	.note-card__overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 0) 0%,
			rgba(0, 0, 0, 0.1) 100%
		);
		opacity: 0;
		transition: opacity var(--transition-smooth);
	}

	.note-card:hover .note-card__overlay {
		opacity: 1;
	}

	.note-card__content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		min-height: 80px;
	}

	.note-card__header {
		margin-bottom: 0;
		flex: 1;
	}

	.note-card__title {
		font-family: var(--font-serif);
		font-size: var(--text-lg);
		font-weight: 700;
		line-height: var(--leading-tight);
		color: var(--color-primary);
		margin: 0 0 var(--space-2) 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.note-card__description {
		font-size: var(--text-sm);
		line-height: var(--leading-relaxed);
		color: var(--color-secondary);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.note-card__footer {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		gap: var(--space-2);
		margin-top: var(--space-3);
	}

	.note-card__date {
		font-size: var(--text-xs);
		font-weight: 500;
		color: var(--color-muted);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.note-card__updated {
		font-size: var(--text-xs);
		color: var(--color-muted);
		font-style: italic;
	}

	/* Compact variant - now same as default */
	.note-card--compact {
		/* Same as default layout */
	}

	/* Featured variant */
	.note-card--featured {
		grid-column: span 2;
	}

	.note-card--featured .note-card__image {
		width: 160px;
		height: 100px;
	}

	.note-card--featured .note-card__title {
		font-size: var(--text-xl);
		margin-bottom: var(--space-3);
	}

	.note-card--featured .note-card__description {
		font-size: var(--text-base);
		-webkit-line-clamp: 3;
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.note-card {
			flex-direction: column;
			align-items: stretch;
			padding: var(--space-4);
		}

		.note-card__link {
			flex-direction: column;
			gap: var(--space-4);
		}

		.note-card__image {
			width: 100%;
			height: 120px;
		}

		.note-card__content {
			min-height: auto;
		}

		.note-card--featured {
			grid-column: span 1;
		}

		.note-card--featured .note-card__image {
			width: 100%;
			height: 140px;
		}

		.note-card--featured .note-card__title {
			font-size: var(--text-lg);
		}
	}

	@media (max-width: 480px) {
		.note-card {
			padding: var(--space-3);
		}

		.note-card__title {
			font-size: var(--text-base);
		}

		.note-card__description {
			font-size: var(--text-xs);
		}
	}

	/* Focus states for accessibility */
	.note-card__link:focus {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
	}

	/* Dark mode support using CSS variables */
	[data-theme="dark"] .note-card {
		background: var(--color-background);
	}

	[data-theme="dark"] .note-card__title {
		color: var(--color-primary);
	}

	[data-theme="dark"] .note-card__description {
		color: var(--color-secondary);
	}

	[data-theme="dark"] .note-card__date,
	[data-theme="dark"] .note-card__updated {
		color: var(--color-muted);
	}
</style>
