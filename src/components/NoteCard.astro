---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import CategoryBadge from './CategoryBadge.astro';
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	slug: string;
	heroImage?: ImageMetadata;
	category?: string;
	className?: string;
}

const {
	title,
	description,
	pubDate,
	slug,
	heroImage,
	category,
	className = ''
} = Astro.props;

const imageSize = { width: 120, height: 80 };
---

<article class={`note-card ${className}`}>
	<a href={`/notes/${slug}/`} class="note-card__link">
		{heroImage && (
			<div class="note-card__image">
				<Image
					src={heroImage}
					alt={title}
					width={imageSize.width}
					height={imageSize.height}
					class="note-card__img"
					loading="lazy"
				/>
				<div class="note-card__overlay"></div>
			</div>
		)}
		
		<div class="note-card__content">
			<header class="note-card__header">
				{category && (
					<CategoryBadge category={category} size="small" className="note-card__category" />
				)}
				<h3 class="note-card__title">{title}</h3>
				{description && (
					<p class="note-card__description">{description}</p>
				)}
			</header>
			
			<footer class="note-card__footer">
				<time 
					class="note-card__date" 
					datetime={pubDate.toISOString()}
					title={`Published on ${pubDate.toLocaleDateString()}`}
				>
					<FormattedDate date={pubDate} />
				</time>
			</footer>
		</div>
	</a>
</article>

<style>
	.note-card {
		position: relative;
		background: var(--color-background);
		border: 1px solid var(--color-border-light);
		border-radius: 0;
		overflow: hidden;
		transition: all var(--transition-smooth);
		height: 100%;
		display: flex;
		flex-direction: row;
		align-items: flex-start;
		padding: var(--space-6);
		gap: var(--space-6);
	}

	.note-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-lg);
		border-color: var(--color-border);
	}

	.note-card__link {
		display: flex;
		flex-direction: row;
		align-items: flex-start;
		height: 100%;
		width: 100%;
		text-decoration: none;
		color: inherit;
		gap: var(--space-6);
	}

	.note-card__image {
		position: relative;
		overflow: hidden;
		background: var(--color-background-subtle);
		width: 120px;
		height: 80px;
		flex-shrink: 0;
	}

	.note-card__img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform var(--transition-smooth);
		border-radius: 0;
		margin: 0;
	}

	.note-card:hover .note-card__img {
		transform: scale(1.05);
	}

	.note-card__overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 0) 0%,
			rgba(0, 0, 0, 0.1) 100%
		);
		opacity: 0;
		transition: opacity var(--transition-smooth);
	}

	.note-card:hover .note-card__overlay {
		opacity: 1;
	}

	.note-card__content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		min-height: 80px;
	}

	.note-card__header {
		margin-bottom: 0;
		flex: 1;
	}

	.note-card__category {
		margin-bottom: var(--space-2);
	}

	.note-card__title {
		font-family: var(--font-serif);
		font-size: var(--text-lg);
		font-weight: 400;
		line-height: var(--leading-tight);
		color: var(--color-primary);
		margin: 0 0 var(--space-2) 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		letter-spacing: -0.01em;
	}

	.note-card__description {
		font-size: var(--text-sm);
		line-height: var(--leading-relaxed);
		color: var(--color-secondary);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		opacity: 0.8;
	}

	.note-card__footer {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		gap: var(--space-2);
		margin-top: var(--space-3);
	}

	.note-card__date {
		font-size: var(--text-xs);
		font-weight: 500;
		color: var(--color-muted);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}




	/* Responsive adjustments */
	@media (max-width: 768px) {
		.note-card {
			flex-direction: column;
			align-items: stretch;
			padding: var(--space-4);
		}

		.note-card__link {
			flex-direction: column;
			gap: var(--space-4);
		}

		.note-card__image {
			width: 100%;
			height: 120px;
		}

		.note-card__content {
			min-height: auto;
		}

	}

	@media (max-width: 480px) {
		.note-card {
			padding: var(--space-3);
		}

		.note-card__title {
			font-size: var(--text-base);
		}

		.note-card__description {
			font-size: var(--text-xs);
		}
	}

	/* Focus states for accessibility */
	.note-card__link:focus {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
	}

	/* Dark mode support using CSS variables */
	[data-theme="dark"] .note-card {
		background: var(--color-background);
	}

	[data-theme="dark"] .note-card__title {
		color: var(--color-primary);
	}

	[data-theme="dark"] .note-card__description {
		color: var(--color-secondary);
	}

	[data-theme="dark"] .note-card__date,
	[data-theme="dark"] .note-card__updated {
		color: var(--color-muted);
	}
</style>
