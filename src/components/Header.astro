---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="bg-background border-b border-border sticky top-0 z-50 backdrop-blur-sm bg-white/80">
	<nav class="flex items-center justify-between px-6 py-4 container container-2xl">
		<div class="flex-shrink-0">
			<a href="/" class="font-serif text-xl font-bold text-primary no-underline transition-colors hover:text-accent">{SITE_TITLE}</a>
		</div>
		<div class="flex items-center gap-2 mx-8">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/notes">Notes</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	/* Responsive adjustments for header */
	@media (max-width: 768px) {
		nav {
			padding: var(--space-3) var(--space-4);
		}

		.nav-links {
			margin: 0 var(--space-4);
			gap: var(--space-1);
		}

		.brand-link {
			font-size: var(--text-lg);
		}
	}

	@media (max-width: 640px) {
		.nav-links {
			margin: 0 var(--space-2);
		}
	}
</style>
