---
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="header">
	<nav class="nav" aria-label="Main navigation">
		<!-- Mobile Menu Button -->
		<button 
			class="nav__toggle" 
			aria-label="Toggle navigation menu"
			aria-expanded="false"
			aria-controls="nav-menu"
		>
			<span class="nav__toggle-line"></span>
			<span class="nav__toggle-line"></span>
			<span class="nav__toggle-line"></span>
		</button>

		<!-- Navigation Menu -->
		<div class="nav__menu" id="nav-menu">
			<ul class="nav__list">
				<li class="nav__item">
					<a href="/" class="nav__link" data-page="home">Home</a>
				</li>
				<li class="nav__item">
					<a href="/notes" class="nav__link" data-page="notes">Notes</a>
				</li>
				<li class="nav__item">
					<a href="/about" class="nav__link" data-page="about">About</a>
				</li>
			</ul>
		</div>

		<!-- Brand/Logo - Centered -->
		<div class="nav__brand" id="nav-brand">
			<a href="/" class="nav__brand-link" aria-label="Go to homepage">
				<span class="nav__brand-text nav__brand-text--full">{SITE_TITLE}</span>
				<span class="nav__brand-text nav__brand-text--mobile">Field Notes (oMH)</span>
			</a>
		</div>

		<!-- Right side utility area -->
		<div class="nav__utility">
			<ThemeToggle />
		</div>
	</nav>
</header>

<script>
	// Mobile navigation toggle
	const navToggle = document.querySelector('.nav__toggle') as HTMLButtonElement | null;
	const navMenu = document.querySelector('.nav__menu') as HTMLElement | null;
	const navLinks = document.querySelectorAll('.nav__link') as NodeListOf<HTMLAnchorElement>;

	// Toggle mobile menu
	navToggle?.addEventListener('click', () => {
		const isExpanded = navToggle.getAttribute('aria-expanded') === 'true';
		navToggle.setAttribute('aria-expanded', String(!isExpanded));
		navMenu?.classList.toggle('nav__menu--open');
		document.body.classList.toggle('nav-open');
	});

	// Close mobile menu when clicking on a link
	navLinks.forEach(link => {
		link.addEventListener('click', () => {
			navToggle?.setAttribute('aria-expanded', 'false');
			navMenu?.classList.remove('nav__menu--open');
			document.body.classList.remove('nav-open');
		});
	});

	// Close mobile menu when clicking outside
	document.addEventListener('click', (e) => {
		const target = e.target as Node | null;
		if (target && !navMenu?.contains(target) && !navToggle?.contains(target)) {
			navToggle?.setAttribute('aria-expanded', 'false');
			navMenu?.classList.remove('nav__menu--open');
			document.body.classList.remove('nav-open');
		}
	});

	// Close mobile menu on escape key
	document.addEventListener('keydown', (e) => {
		if (e.key === 'Escape') {
			navToggle?.setAttribute('aria-expanded', 'false');
			navMenu?.classList.remove('nav__menu--open');
			document.body.classList.remove('nav-open');
		}
	});

	// Set active page based on current URL
	const currentPath = window.location.pathname;
	navLinks.forEach(link => {
		const href = link.getAttribute('href');
		if (href === currentPath || (currentPath.startsWith('/notes') && href === '/notes')) {
			link.classList.add('nav__link--active');
		}
	});

	// Hide/show header title on homepage based on scroll position
	const navBrand = document.getElementById('nav-brand');
	const isHomepage = currentPath === '/' || currentPath === '/index.html';
	
	if (isHomepage && navBrand) {
		// Initially hide the title on homepage
		navBrand.classList.add('nav__brand--hidden');
		
		// Function to check if we've scrolled past the hero section
		const checkScrollPosition = () => {
			const heroSection = document.querySelector('.hero-section');
			if (heroSection) {
				const rect = heroSection.getBoundingClientRect();
				const heroBottom = rect.bottom;
				
				if (heroBottom < 0) {
					navBrand.classList.remove('nav__brand--hidden');
				} else {
					navBrand.classList.add('nav__brand--hidden');
				}
			}
		};
		
		// Check on scroll
		window.addEventListener('scroll', checkScrollPosition);
		
		// Check on page load
		checkScrollPosition();
	}
</script>

<style>
	/* Header Styles */
	.header {
		position: sticky;
		top: 0;
		z-index: var(--z-sticky);
		background: var(--header-bg);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--color-border-light);
		transition: all var(--transition-smooth);
		max-height: 64px;
	}

	/* Navigation */
	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: var(--space-3) var(--space-6);
		max-width: var(--container-content);
		margin: 0 auto;
		position: relative;
		height: 64px;
		min-height: 64px;
	}

	/* Brand - Centered */
	.nav__brand {
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
		z-index: 1;
	}

	.nav__brand-link {
		font-family: var(--font-serif);
		font-weight: 400; /* Regular weight like The Atlantic */
		color: var(--color-primary);
		text-decoration: none;
		transition: color var(--transition-smooth);
		letter-spacing: -0.02em;
		line-height: 1.1;
		display: flex;
		align-items: center;
	}

	.nav__brand-text {
		transition: all var(--transition-smooth);
	}

	/* Hide brand on homepage when at top */
	.nav__brand--hidden {
		opacity: 0;
		visibility: hidden;
		transform: translateX(-50%) translateY(-10px);
		transition: all var(--transition-smooth);
	}

	.nav__brand-text--full {
		font-size: var(--text-sm); /* Small size for mobile */
	}

	.nav__brand-text--mobile {
		font-size: var(--text-xs); /* 12px - readable on mobile */
		display: none;
	}

	.nav__brand-link:hover {
		color: var(--color-accent);
	}

	.nav__brand-link:focus {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
		border-radius: 0;
	}

	/* Utility area for theme toggle and future features */
	.nav__utility {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2rem; /* Same width as mobile toggle for balance */
		height: 2rem;
	}

	/* Mobile Menu Toggle */
	.nav__toggle {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 2rem;
		height: 2rem;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		z-index: 10;
		transition: transform var(--transition-smooth);
	}

	.nav__toggle:hover {
		transform: scale(1.05);
	}

	.nav__toggle:focus {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
		border-radius: 0;
	}

	.nav__toggle-line {
		width: 1.25rem;
		height: 2px;
		background: var(--color-primary);
		transition: all var(--transition-smooth);
		transform-origin: center;
	}

	.nav__toggle-line:not(:last-child) {
		margin-bottom: 3px;
	}

	/* Hamburger animation */
	.nav__toggle[aria-expanded="true"] .nav__toggle-line:nth-child(1) {
		transform: translateY(5px) rotate(45deg);
	}

	.nav__toggle[aria-expanded="true"] .nav__toggle-line:nth-child(2) {
		opacity: 0;
		transform: scaleX(0);
	}

	.nav__toggle[aria-expanded="true"] .nav__toggle-line:nth-child(3) {
		transform: translateY(-5px) rotate(-45deg);
	}

	/* Navigation Menu */
	.nav__menu {
		position: absolute;
		top: 64px;
		left: 0;
		right: 0;
		background: var(--color-background);
		border-bottom: 1px solid var(--color-border-light);
		box-shadow: var(--shadow-md);
		transform: translateY(-100%);
		opacity: 0;
		visibility: hidden;
		transition: all var(--transition-smooth);
	}

	.nav__menu--open {
		transform: translateY(0);
		opacity: 1;
		visibility: visible;
	}

	.nav__list {
		list-style: none;
		margin: 0;
		padding: var(--space-4) 0;
		display: flex;
		flex-direction: column;
		gap: var(--space-1);
	}

	.nav__item {
		margin: 0;
	}

	.nav__link {
		display: block;
		padding: var(--space-3) var(--space-6);
		color: var(--color-secondary);
		text-decoration: none;
		font-weight: 400; /* Regular weight like The Atlantic */
		font-size: var(--text-sm); /* Smaller, body text size */
		transition: all var(--transition-smooth);
		border-radius: 0;
		position: relative;
		font-family: var(--font-sans);
	}

	.nav__link:hover {
		color: var(--color-accent);
		background: var(--color-background-subtle);
	}

	.nav__link:focus {
		outline: 2px solid var(--color-accent);
		outline-offset: -2px;
		background: var(--color-background-subtle);
	}

	.nav__link--active {
		color: var(--color-accent);
		font-weight: 400; /* Keep regular weight even when active */
		background: var(--color-background-subtle);
	}

	.nav__link--active::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 3px;
		background: var(--color-accent);
	}

	/* Desktop Styles */
	@media (min-width: 768px) {
		.nav {
			padding: var(--space-3) var(--space-8);
		}

		.nav__toggle {
			display: none;
		}

		.nav__menu {
			position: static;
			background: none;
			border: none;
			box-shadow: none;
			transform: none;
			opacity: 1;
			visibility: visible;
		}

		.nav__list {
			flex-direction: row;
			gap: var(--space-6); /* More spacing like The Atlantic */
			padding: 0;
		}

		.nav__link {
			padding: var(--space-2) 0; /* Minimal padding for clean look */
			border-radius: 0;
			font-size: var(--text-sm);
			position: relative;
		}

		.nav__link--active::before {
			display: none;
		}

		.nav__link--active {
			background: none;
			color: var(--color-accent);
		}

		.nav__link--active::after {
			content: '';
			position: absolute;
			bottom: -2px;
			left: 0;
			right: 0;
			height: 1px;
			background: var(--color-accent);
		}
	}

	/* Mobile-specific styles */
	@media (max-width: 767px) {
		.nav__brand-text--full {
			display: none;
		}

		.nav__brand-text--mobile {
			display: block;
		}
	}

	/* Tablet */
	@media (min-width: 768px) {
		.nav__brand-text--full {
			font-size: var(--text-lg); /* Medium size for tablet */
		}
	}

	/* Large Desktop */
	@media (min-width: 1024px) {
		.nav {
			padding: var(--space-3) var(--space-8);
		}

		.nav__brand-text--full {
			font-size: var(--text-xl); /* Appropriate size for 64px height */
		}

		.nav__link {
			font-size: var(--text-sm); /* Keep small, body text size */
			padding: var(--space-2) 0;
		}

		.nav__list {
			gap: var(--space-8); /* Even more spacing on large screens */
		}
	}

	/* Prevent body scroll when mobile menu is open */
	body.nav-open {
		overflow: hidden;
	}

	/* High contrast mode support */
	@media (prefers-contrast: high) {
		.header {
			background: var(--color-background);
			border-bottom: 2px solid var(--color-primary);
		}

		.nav__link {
			border: 1px solid transparent;
		}

		.nav__link:hover,
		.nav__link:focus {
			border-color: var(--color-accent);
		}
	}

	/* Dark mode high contrast support */
	[data-theme="dark"] @media (prefers-contrast: high) {
		.header {
			background: var(--color-background);
			border-bottom: 2px solid var(--color-primary);
		}
	}

	/* Reduced motion support */
	@media (prefers-reduced-motion: reduce) {
		.nav__toggle-line,
		.nav__menu,
		.nav__link,
		.nav__brand-link {
			transition: none;
		}
	}

	/* Button/CTA link styling for content */
	.header-link {
		display: inline-block;
		padding: var(--space-3) var(--space-6);
		background: var(--color-accent);
		color: white;
		text-decoration: none;
		border-radius: 0;
		font-weight: 500;
		transition: all var(--transition-smooth);
		cursor: pointer;
	}

	.header-link:hover {
		background: var(--color-accent-hover);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.header-link:focus {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
	}
</style>
