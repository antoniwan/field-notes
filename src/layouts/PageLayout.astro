---
import BaseLayout from './BaseLayout.astro';
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	canonical?: string;
	noindex?: boolean;
}

const { 
	title, 
	description, 
	image,
	canonical,
	noindex = false 
} = Astro.props;
---

<BaseLayout 
	title={title} 
	description={description} 
	image={image}
	canonical={canonical}
	noindex={noindex}
>
	<div class="w-full text-primary">
		<slot />
	</div>
</BaseLayout>

